<svg 
  xmlns="http://www.w3.org/2000/svg" 
  width="35" 
  height="35" 
  viewBox="0 0 24 24" 
  fill="none" 
  stroke="white" 
  stroke-width="2.5" 
  stroke-linecap="round" 
  {...Astro.props}
  class={`menu-icon-svg ${Astro.props.class}`}
>
  <line x1="4" y1="6" x2="20" y2="6" class="line top">
    <animate fill="freeze" attributeName="stroke-dashoffset" dur="0.3s" values="16;0"/>
  </line>
  
  <line x1="4" y1="12" x2="20" y2="12" class="line middle">
    <animate fill="freeze" attributeName="stroke-dashoffset" begin="0.3s" dur="0.3s" values="16;0"/>
  </line>
  
  <line x1="4" y1="18" x2="20" y2="18" class="line bottom">
    <animate fill="freeze" attributeName="stroke-dashoffset" begin="0.6s" dur="0.3s" values="16;0"/>
  </line>
</svg>

<style>
  .menu-icon-svg {
    z-index: 101;
    position: relative;
  }

  .line {
    stroke-dasharray: 16;
    stroke-dashoffset: 16;
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1), opacity 0.3s ease;
    transform-origin: center;
    transform-box: fill-box;
  }

  :global(.nav-open) .top {
    transform: translateY(6px) rotate(45deg);
  }

  :global(.nav-open) .middle {
    opacity: 0;
    transform: scaleX(0);
  }

  :global(.nav-open) .bottom {
    transform: translateY(-6px) rotate(-45deg);
  }
</style>